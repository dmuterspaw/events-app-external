<div class="is-flex-grow-1 is-flex-shrink-1 is-flex is-align-items-center">
  <a class="button is-link modal-button" href="/event-modal">add event</a>
  {{#if showEventModal}}
  <div class="modal modal-fx-fadeInScale is-active" id="add-event-modal">
    <div class="modal-background"></div>
    <div class="modal-content" style="overflow:hidden">
      <div class="columns is-mobile is-flex-grow-1" style="border-radius: 10px">
        <div class="column is-half is-offset-one-quarter p-5 has-background-link-light" style="border-radius: 10px">
          <p class="title">
            add an event
          </p>
          <div class="control">
            <form action="/event" method="post">
              <div class="field">
                <input name="title" class="input is-small rounded-input" placeholder="title" type="text" />
              </div>
              <div class="field">
                <textarea class="textarea is-rounded is-small rounded-input" name="description"
                  placeholder="what is this event about?" type="text"></textarea>
              </div>
              <br />
              <a href="/">
                <input type="submit" name="submit" value="submit" class="button is-link"  />
              </a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/if}}
</div>